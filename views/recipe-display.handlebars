<div class="container">
        <div class="row">
            <div class="col-sm-12" align="center">

            <div class="panel panel-primary" align="left">
                <div class="panel-heading">
                    <h3 class="panel-title"><strong>Recipe</strong></h3>
                </div>
                
                <div class="panel-body">
				
				<h2>{{recipe.name}}</h2>

				<p>{{recipe.description}}</p>
				
				{{#if recipe.image_url}}
					<img src="{{recipe.image_url}}" class="img-responsive">
				{{/if}}

				<h3>Ingredients:</h3>
				
				<ul>
				{{#each ingredients}}
					<li>{{this}}</li>
				{{/each}}
				</ul>

				<h3>Instructions:</h3>

				<p>{{recipe.instructions}}</p>

                </div>

            </div>
        </div>
	</div>
</div>

